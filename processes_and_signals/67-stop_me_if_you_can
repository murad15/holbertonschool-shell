#!/usr/bin/env bash
# 67-stop_me_if_you_can: stops the 7-highlander process

# Find PID(s) of 7-highlander
pid=$(pgrep -f "7-highlander")

# Kill it if running
if [ -n "$pid" ]; then
    kill "$pid"
    echo "7-highlander process with PID $pid has been killed."
else
    echo "No running 7-highlander process found."
fi
